{{#> layouts/base }}


    {{#*inline "content"}}
        {{> includes/header_opaque}}

        <!-- Page Title
		============================================= -->
        <section id="page-title">

            <div class="container clearfix">
                <h1>Purchase Membership</h1>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item"><a href="#">Member Portal</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Checkout</li>
                </ol>
            </div>

        </section>

        <!-- Content
        ============================================= -->
        <section id="content">

            <div class="content-wrap">

                <div class="container clearfix">

                    <div class="row clearfix">
                        <div class="col-lg-6">
                            <div class="card">
                                <div class="card-body p-10">
                                    Already have an account? <a href="/member-login">Click here to login</a>
                                </div>
                            </div>
                            <br/>

                            <h3>Member Information</h3>

                            <p>Upon account creation, you will be emailed a temporary password that you can use to login and manage your account.</p>

                            <form id="billing-form" name="billing-form" class="nobottommargin" action="#" method="post">

                                <div class="col_half">
                                    <label for="billing-form-name">Full Name:</label>
                                    <input type="text" id="billing-form-name" name="billing-form-name" value="" class="sm-form-control" />
                                </div>

                                <div class="col_half col_last">
                                    <label for="billing-form-lname">Preferred Email:</label>
                                    <input type="text" id="billing-form-lname" name="billing-form-lname" value="" class="sm-form-control" />
                                </div>

                                <div class="clear"></div>

                                <div class="col_half">
                                    <label for="billing-form-name">UAB Blazer-ID:</label>
                                    <input type="text" id="billing-form-name" name="billing-form-name" value="" class="sm-form-control" />
                                </div>

                                <div class="col_half col_last">
                                    <label for="billing-form-phone">Phone:</label>
                                    <input type="text" id="billing-form-phone" name="billing-form-phone" value="" class="sm-form-control" />
                                </div>

                            </form>

