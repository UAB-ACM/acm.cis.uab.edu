    {{#*inline "scripts"}}
        <script>
            $("#application-form").on('submit', event => {
                event.preventDefault()
                console.log(event)
                if (!document.getElementById('application-form').checkValidity())
                    return
                $.post('/api/members/apply', $('#application-form').serialize())
                        .then(res => {
                            swal(res.msg)
                            $("#application-form")[0].reset()
                        })
                        .catch(err => swal('Error', err, 'error'))
            })
        </script>
